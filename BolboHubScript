local toggle = false
local player = game.Players.LocalPlayer

-- Funkcja do ulepszania rzeczy
local function upgradeItems()
    while toggle do
        for _, upgradeName in ipairs(upgrades) do
            if not toggle then break end -- Wyjdź, jeśli toggle zostanie wyłączony
            local args = {upgradeName}
            game:GetService("ReplicatedStorage").Network.Upgrades_Purchase:InvokeServer(unpack(args))
            wait(0.5)
        end
    end
end

-- Obsługa GUI toggle
local Toggle = MainTab:CreateToggle({
    Name = "Auto Farm",
    CurrentValue = false,
    Flag = "Toggle1",
    Callback = function(Value)
        toggle = Value
        if toggle then
            print("Auto Farm Enabled")
            upgradeItems()
        else
            print("Auto Farm Disabled")
        end
    end,
})
